extends layout

block content
  header(data-role='header')
    h1= item
  div(data-role='content')
    if items.length
      //create a listview wrapper
      ul(data-role='listview')
        //foreach of the collected elements
        - items.forEach(function(item){
          //create a li
          li
            //and a link using our passed urlObj Object
            form(action=post,)
            a(href='/watch/' + item['urlObj'].query.v)
              //and a thumbnail
              img(src='http://metaoimage.heroku.com/q?image='+ item['urlObj'].query.v, alt='Thumbnail')
              //title and time label
              h3= item['title']
              h5= item['time']
        - })
    div
      a(href='/', class='ui-btn ui-shadow').
        صفحه اصلی
